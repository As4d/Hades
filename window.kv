#:kivy 2.0.0

WindowManager:
    MenuScreen:
    ScanScreen:

<MenuScreen>:

    name: 'Menu'

    Label:
        text: 'Menu'
        size_hint: 0.1, 0.1
        pos_hint: {'x': 0.05,'y': 0.9}
        font_size: 32
    
    BoxLayout:

        orientation: 'horizontal'
        cols: 2
        pos_hint: {'x': 0.125,'y': 0.5}
        size_hint: 0.75 , 0.25
        
        Button:
            id: testButton0
            text: 'test'
            font_size: 32
            background_color: (100, 0, 0, 0.5)
        
        Button:
            id: testButton1
            text: 'test'
            font_size: 32
            background_color: (100, 0, 0, 0.5)

    BoxLayout:

        orientation: 'horizontal'
        cols: 2
        pos_hint: {'x': 0.125,'y': 0.25}
        size_hint: 0.75 , 0.25

        Button:
            id: runButton
            text: 'Run'
            font_size: 32
            background_color: (100, 0, 0, 0.5)
            on_release: 
                app.root.current = 'Scan'
                root.manager.transition.direction = 'left'
        
        BoxLayout:

            orientation: 'vertical'

            Label:
                size_hint: 0.1, 0.1
                pos_hint: {'x': 0.1,'y': 0.9}
                id: lastScan
                text: 'Machine Info'
            
            Label:
                id: lastScan
                text: 'Test:'
                font_size: 16
                

<ScanScreen>:

    name: 'Scan'

    BoxLayout:

        orientation: 'vertical'
        size: root.width, root.height

        Label:

            text: 'Scanning...'
            font_size: 32
        
        Button:
            id: backButton
            text: 'Back'
            font_size: 32
            background_color: (100, 0, 0, 0.5)
            on_release: 
                app.root.current = 'Menu'
                root.manager.transition.direction = 'right'